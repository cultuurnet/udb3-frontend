{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "baseUrl": "./src",
    "paths": {
      "@/ui/*": ["ui/*"],
      "@/hooks/*": ["hooks/*"],
      "@/pages/*": ["pages/*"],
      "@/utils/*": ["utils/*"],
      "@/context/*": ["context/*"],
      "@/constants/*": ["constants/*"],
      "@/test/*": ["test/*"],
      "@/i18n/*": ["i18n/*"],
      "@/layouts/*": ["layouts/*"],
      "@/styles/*": ["styles/*"],
      "@/types/*": ["types/*"],
      "@/auth/*": ["auth/*"]
    },
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "global.d.ts", "src/**/*"],
  "exclude": ["node_modules", "src/**/*.test.*", "src/**/*.spec.*"]
}
